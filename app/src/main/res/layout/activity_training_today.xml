<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fossen.power.training_today.TrainingTodayActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_tt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        app:title="@string/title_training_today" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/colorPrimaryLight"
            android:dividerHeight="0dp"
            android:paddingBottom="48dp" />

        <TextView
            android:id="@+id/start_training"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:elevation="8dp"
            android:gravity="center"
            android:text="@string/text_start_training"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="24sp" />

    </FrameLayout>

</LinearLayout>
